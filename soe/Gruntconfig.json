{
  "srcPaths": {
    "make": "src/engineering.make"
  },
  "domain": "jse.localacebuild",
  "buildPaths": {
    "packages": "build/packages"
  },
  "packages": {
    "srcFiles": ["!sites/*/files/**", "!xmlrpc.php", "!modules/php/*"],
    "projFiles": ["README*", "bin/**", "hooks/**"],
    "dest": {
      "docroot": "docroot"
    }
  },
  "phpcs": true,
  "phpmd": true,
  "behat": {
    "flags": "--tags ~@wip"
  },
  "eslint": true,
  "drush": {
    "path": "/usr/local/bin/drush",
    "make": {
      "args": ["--force-complete"]
    },
    "alias": "jse.localacebuild"
  },
  "scripts": {
    "settings": "cp src/sites/default/*.php build/html/sites/default/",
    "syncfiles": "drush rsync --mode=rv @jse.redesign:sites/default/files/ @jse.localacebuild:%files",
    "syncdb": "drush <%= config.alias %> sql-drop && drush sql-sync @swssoe.dev <%= config.alias %>",
    "update": "drush <%= config.alias %> updb -yv",
    "reset": "drush <%= config.alias %> rr && drush <%= config.alias %> cc all"
  },
  "deploy_site": {
    "development": {
      "options": {
        "branch": "SOE-3551-tool-tasks",
        "commit_msg": "deployment"
      },
      "base_path": "build/packages/package",
      "remote_url": "git@github.com:boznik/destination_test.git"
    }
  },
  "copy": {
    "acquia_dependencies": {
      "expand": true,
      "cwd": "acquia_dependencies/",
      "src": "*/*",
      "dest": "build/packages/package/"
    }
  }
}
